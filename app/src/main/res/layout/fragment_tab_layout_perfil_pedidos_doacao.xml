<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_criar_pedido_doacao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_gerenciar_doacoes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_adicionar" />

    <ListView
        android:id="@+id/lista_pedido_doacao_criados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_criar_pedido_doacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_existencia_pedido_doacao" />

    <TextView
        android:id="@+id/lbl_existencia_pedido_doacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Não há pedidos de doação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_gerenciar_doacoes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/btn_criar_pedido_doacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_criar_pedido_doacao"
        app:layout_constraintTop_toTopOf="@+id/btn_criar_pedido_doacao"
        app:srcCompat="@drawable/ic_gerenciar_pedidos" />

    <TextView
        android:id="@+id/lbl_criar_pedido_doacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar pedido"
        android:textColor="#357fe6"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_criar_pedido_doacao"
        app:layout_constraintStart_toStartOf="@+id/btn_criar_pedido_doacao"
        app:layout_constraintTop_toBottomOf="@+id/btn_criar_pedido_doacao" />

    <TextView
        android:id="@+id/lbl_gerenciar_pedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciar pedidos"
        android:textColor="#357fe6"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_gerenciar_doacoes"
        app:layout_constraintStart_toStartOf="@+id/btn_gerenciar_doacoes"
        app:layout_constraintTop_toBottomOf="@+id/btn_gerenciar_doacoes" />

</androidx.constraintlayout.widget.ConstraintLayout>